{
  "name": "rystem-docs",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "description": "Rystem Documentation & MCP Static Site Generator",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev": "vite",
    "dev:api": "npm run prebuild && tsx server-local.ts",
    "build-docs": "tsx scripts/build-docs.ts",
    "build-mcp": "tsx scripts/build-mcp.ts",
    "build-mcp-server": "tsx scripts/build-mcp-server.ts",
    "prebuild": "npm run build-docs && npm run build-mcp && npm run build-mcp-server",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@vercel/node": "^5.6.6",
    "cors": "^2.8.5",
    "express": "^4.22.1",
    "lucide-react": "^0.344.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.30.3",
    "rehype-highlight": "^7.0.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.17",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "glob": "^10.5.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vite": "^7.3.1"
  }
}
