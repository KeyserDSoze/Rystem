{
  "compilerOptions": {
    "target": "ES2024",
    "module": "CommonJS",
    "lib": [ "ES2024", "DOM" ],
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
