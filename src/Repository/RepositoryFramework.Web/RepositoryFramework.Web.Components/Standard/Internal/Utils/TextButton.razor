@namespace RepositoryFramework.Web.Components.Standard

<button type="button" class="@Class" @onclick="@((x) => Click())">
    @LocalizationHandler.Get(Text)
</button>

@code {
    [Parameter]
    public Action Click { get; set; }
    [Parameter]
    public string Text { get; set; }
    [Parameter]
    public string? Class { get; set; } = DefaultClass;
    private const string DefaultClass = "btn btn-primary bg-secondary btn";
}