@page "/Repository/{Name}/Query"
@namespace RepositoryFramework.Web.Components
@inherits RepositoryBase

@if (IsLoadable)
{
    @if (_policies?.Count > 0)
    {
        <Microsoft.AspNetCore.Components.Authorization.AuthorizeView Policy="@string.Join(',', _policies)">
            @LoadStandard()
        </Microsoft.AspNetCore.Components.Authorization.AuthorizeView>
    }
    else
    {
        @LoadStandard()
    }
}
