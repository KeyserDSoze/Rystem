@using Microsoft.AspNetCore.Http;
@using RepositoryFramework.Web.Components;
@inject AppSettings Settings
@inject AppPaletteWrapper AppPaletteWrapper
@inject IHttpContextAccessor HttpContextAccessor

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
<link rel="stylesheet" href="_content/Radzen.Blazor/css/default-base.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />

@{
    var palette = AppPaletteWrapper.Skins.First().Value;
    if (HttpContextAccessor.HttpContext.Request.Cookies.TryGetValue(Constant.PaletteKey, out var paletteKey) && AppPaletteWrapper.Skins.ContainsKey(paletteKey))
    {
        palette = AppPaletteWrapper.Skins[paletteKey];
    }
}

<style>
    :root {
        --primary: @(palette.Primary);
        --secondary: @(palette.Secondary);
        --success: @(palette.Success);
        --info: @(palette.Info);
        --warning: @(palette.Warning);
        --danger: @(palette.Danger);
        --light: @(palette.Light);
        --dark: @(palette.Dark);
        --link-color: @(palette.Link.Color);
        --link-hover-color: @(palette.Link.Hover);
        --btn-color: @(palette.Button.Color);
        --btn-bg: @(palette.Button.Background);
        --btn-hover-color: shade-color(@(palette.Button.Color), 10%);
        --btn-hover-bg: shade-color(@(palette.Button.Background), 15%);
        --bs-body-color: @(palette.BackgroundColor);
        --table-color: @(palette.Table.Color);
        --table-striped-color: @(palette.Table.StripedColor);
        --table-bg: @(palette.Table.Background);
        --table-striped-bg: @(palette.Table.StripedBackground);
        --nav-input-font-size: @(Settings.Sizing.InputFontSize);
        --nav-font-size: @(Settings.Sizing.NavigationFontSize);
        --nav-font-weight: @(Settings.Sizing.NavigationFontWeight);
    }
</style>

<link href="_content/Rystem.RepositoryFramework.Web.Components/repository.css" rel="stylesheet" />