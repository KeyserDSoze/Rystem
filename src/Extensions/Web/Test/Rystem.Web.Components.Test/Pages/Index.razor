@page "/"
@using Rystem.Web.Components.Customization;
@using Rystem.Web.Components.Contents;

<PageTitle>Index</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

<SurveyPrompt Title="How is Blazor working for you?" />
<Button Message="@Message" Size="SizeType.Large" Icon="IconType.Search" IconStyle="StyleType.Rounded" IconSize="SizeType.Large"
        Click="@Clicking">
    <Body>
        @Message
    </Body>
</Button>
<DataTable>
    <FixedHeader>
        Ciao
    </FixedHeader>
    <FixedHeader >
        Ciao
    </FixedHeader>
</DataTable>

@code {
    public string? Message { get; set; } = "ciao";
    public ValueTask Clicking()
    {
        Message = "Clicked";
        _ = InvokeAsync(() => StateHasChanged());
        return ValueTask.CompletedTask;
    }
}
