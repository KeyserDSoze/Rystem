@using Microsoft.Extensions.DependencyInjection
@using Rystem.Authentication.Social.Blazor.Components.Buttons
@using Rystem.Authentication.Social.Blazor.Components.Buttons.SocialButtons

<div class="centered">
    @if (ChildContent != null)
    {
        @ChildContent
    }
    @if (Settings != null)
    {
        @if (Settings.Microsoft.ClientId != null)
        {
            <MicrosoftButton />
        }
        @if (Settings.Google.ClientId != null)
        {
            <GoogleButton />
        }
    }
</div>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}