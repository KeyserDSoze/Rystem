@using System.Text.Json
<SocialButton Clicked="() => _ = LoginAsync()" Text="Log in with Microsoft" ActiveBackground="#555555" Background="#333333" Color="#fff">
    <Icon>
        <svg xmlns="http://www.w3.org/2000/svg" fill="#fff" x="0px" y="0px" viewBox="0 0 48 48" style="width: 100%; height: auto;"><path fill="#ff5722" d="M6 6H22V22H6z" transform="rotate(-180 14 14)"></path><path fill="#4caf50" d="M26 6H42V22H26z" transform="rotate(-180 34 14)"></path><path fill="#ffc107" d="M26 26H42V42H26z" transform="rotate(-180 34 34)"></path><path fill="#03a9f4" d="M6 26H22V42H6z" transform="rotate(-180 14 34)"></path></svg>
    </Icon>
</SocialButton>

@code {
    private const string SDK_URL = "https://login.microsoftonline.com/consumers/oauth2/v2.0/authorize?client_id={0}&response_type=code&redirect_uri={1}/&response_mode=query&scope=profile%20openid%20email&state={2}&prompt=select_account&code_challenge={3}&code_challenge_method=S256";
    private const string CodeVerifierKey = "microsoft_code_verifier";
    private const string CodeChallengeKey = "microsoft_code_challenge";

    private async ValueTask LoginAsync()
    {
        // Generate PKCE values
        var codeVerifier = PkceGenerator.GenerateCodeVerifier();
        var codeChallenge = PkceGenerator.GenerateCodeChallenge(codeVerifier);
        
        // Store code_verifier in localStorage for retrieval after callback
        await LocalStorage.SetItemAsync(CodeVerifierKey, codeVerifier);
        await LocalStorage.SetItemAsync(CodeChallengeKey, codeChallenge);
        
        // Generate state and redirect
        var state = await LocalStorage.SetStateAsync(SocialLoginProvider.Microsoft);
        var redirectUri = Manager.GetRedirectUri();
        var clientId = Settings.Microsoft.ClientId;
        
        // Use code_challenge with S256 method (SHA256)
        var url = string.Format(SDK_URL, clientId, redirectUri, state, codeChallenge);
        NavigationManager.NavigateTo(url);
    }
}
